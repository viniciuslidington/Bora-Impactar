generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model RelocationProduct {
  id         Int      @id @default(autoincrement())
  title      String
  category   Categoria   
  description String?
  ong_Id     Int?

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  expirationDate DateTime?
}

model Request {
  id          Int      @id @default(autoincrement())
  title       String
  category    Categoria
  urgency     UrgencyLevel
  quantity    Int?
  description String?
  ong_Id      Int?
  requestTime DateTime?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  expirationDate DateTime?
}

model ONGdata {
  id_bd                     Int      @id @default(autoincrement())
  id                        Int?     @unique
  name                      String?  @unique
  description               String?
  is_formalized             Boolean?
  start_year                Int?
  contact_phone             String?
  instagram_link            String?
  x_link                    String?
  facebook_link             String?
  pix_qr_code_link          String?
  gallery_images_url        String?
  skills                    String?
  causes                    String?
  sustainable_development_goals String?

  createdAt                 DateTime @default(now())
  updatedAt                 DateTime @updatedAt
}



// Enum para níveis de urgência da solicitação
enum UrgencyLevel {
  LOW      // Baixa prioridade
  MEDIUM   // Prioridade média
  HIGH     // Alta prioridade
}

enum Categoria { 
  ALIMENTO
  SERVICOS
  UTENSILIOS
  MEDICAMENTOS_HIGIENE
  BRINQUEDOS_LIVROS
  MOVEIS
  ITEMPET
  AJUDAFINANCEIRA
  OUTRA
}